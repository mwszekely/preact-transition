{
  "name": "preact-transition",
  "type": "module",
  "version": "0.1.0",
  "description": "Easy management of CSS transition classes and in-place swappable content.",
  "source": "src/index.tsx",
  "module": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npx npm-run-all --npm-path npm -pc build:*",
    "watch": "npx npm-run-all --npm-path npm -pc watch:*",
    "watch:ts": "tsc --watch",
    "build:ts": "tsc",
    "postinstall": "npm run build",
    "clean": "tsc --build --clean",
    "watch:sass": "sass --watch --load-path=node_modules ./src/index.scss:./index.css",
    "build:sass": "sass --load-path=node_modules ./src/index.scss:./index.css",
    "watchdemo:ts": "tsc --watch",
    "watchdemo:js": "microbundle --no-compress -i docs/main.tsx -o docs/bundle.js",
    "watchdemo:sass": "sass --watch --load-path=node_modules ./docs/main.scss:./docs/main.css",
    "watchdemo": "npx npm-run-all --npm-path npm -pc  \"npm:watchdemo:*\"",
    "builddemo": "npx npm-run-all --npm-path npm -pc  \"npm:builddemo:*\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "preact": "^10.5.14"
  },
  "devDependencies": {
    "clsx": "^1.1.1",
    "commander": "^6.2.1",
    "concurrently": "^5.3.0",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.29.0",
    "serve": "^12.0.0"
  },
  "dependencies": {
    "preact-prop-helpers": "github:mwszekely/preact-prop-helpers",
    "typescript": "^4.4.0-beta"
  }
}

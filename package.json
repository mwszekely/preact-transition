{
  "name": "preact-transition",
  "type": "module",
  "version": "0.1.0",
  "description": "Easy management of CSS transition classes and in-place swappable content.",
  "source": "src/index.tsx",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": "./dist/index.modern.js",
  "scripts": {
    "watch-ts": "tsc --watch",
    "watch-js": "microbundle watch --no-compress",
    "watch-css": "sass --watch --load-path=node_modules ./src/index.scss:./dist/index.css",
    "watch": "concurrently \"npm:watch-*\"",
    "build-js": "microbundle --no-compress",
    "build-css": "sass --load-path=node_modules ./src/index.scss:./dist/index.css",
    "build": "concurrently \"npm:build-*\"",
    "watchdemo-ts": "tsc --watch",
    "watchdemo-js": "microbundle --no-compress -i docs/main.tsx -o docs/bundle.js",
    "watchdemo-css": "sass --watch --load-path=node_modules ./docs/main.scss:./docs/main.css",
    "watchdemo": "concurrently \"npm:watchdemo-*\"",
    "builddemo": "concurrently \"npm:builddemo-*\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "preact": "^10.5.13"
  },
  "devDependencies": {
    "clsx": "^1.1.1",
    "commander": "^6.2.1",
    "concurrently": "^5.3.0",
    "microbundle": "^0.13.3",
    "sass": "^1.29.0",
    "serve": "^12.0.0"
  },
  "dependencies": {
    "typescript": "^4.4.0-beta"
  }
}
